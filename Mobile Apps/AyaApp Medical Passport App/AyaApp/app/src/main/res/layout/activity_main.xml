<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="op_bit.ayaapp.MainActivity">

    <include layout="@layout/generic_layout_without_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="113dp"
        android:id="@+id/rel1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <Button
                android:id="@+id/btn_DiagnosisInformation"
                android:background="@drawable/ic_diagonis_info"
                android:gravity="bottom|center"
                android:paddingBottom="-10dp"
                android:layout_width="@dimen/menu_ic"
                android:layout_height="@dimen/menu_ic"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="30dp"
            android:text="Diagnosis Information"
            android:textAlignment="center"
            android:layout_below="@+id/btn_DiagnosisInformation"
            android:layout_alignParentStart="true"
            android:textSize="10sp"
            android:gravity="center_vertical" />

        <Button
            android:layout_height="@dimen/menu_ic"
            android:layout_width="@dimen/menu_ic"
            android:id="@+id/btn_Appoinments"
            android:background="@drawable/ic_appointments"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="wrap_content"
            android:text="Health Information"
            android:textAlignment="center"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignStart="@+id/btn_HealthInformation"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:layout_below="@+id/btn_HealthInformation" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="30dp"
            android:text="Medication"
            android:textAlignment="center"
            android:id="@+id/textView7"
            android:layout_below="@+id/btn_Medication"
            android:layout_alignStart="@+id/btn_Medication"
            android:textSize="10sp"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="@dimen/menu_ic"
            android:layout_height="@dimen/menu_ic"
            android:id="@+id/btn_HealthInformation"
            android:background="@drawable/ic_health_info"
            android:layout_marginStart="11dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView7" />

        <Button
            android:layout_width="@dimen/menu_ic"
            android:layout_height="@dimen/menu_ic"
            android:id="@+id/btn_Medication"
            android:background="@drawable/ic_medication"
            android:layout_marginStart="17dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_DiagnosisInformation" />

        <TextView
                android:layout_width="@dimen/menu_ic"
                android:layout_height="30dp"
                android:text="Appointments "
            android:textSize="10sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/btn_Appoinments"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:id="@+id/rel2"
        android:layout_height="153dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignTop="@+id/rel1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="113dp">

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="30dp"
            android:text="Potential Long Term Effects"
            android:layout_below="@+id/btn_LongTermEffects"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textSize="10sp"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="@dimen/menu_ic"
            android:layout_height="@dimen/menu_ic"
            android:id="@+id/btn_LongTermEffects"
            android:background="@drawable/ic_long_term"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="30dp"
            android:text="Websites"
            android:layout_below="@+id/btn_Websites"
            android:layout_alignStart="@+id/btn_Websites"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="10sp" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="30dp"
            android:text="AYA Key Workers"
            android:layout_below="@+id/btn_AYAKeyWorkers"
            android:layout_alignStart="@+id/btn_AYAKeyWorkers"
            android:id="@+id/textView5"
            android:textAlignment="center"
            android:textSize="10sp"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="@dimen/menu_ic"
            android:layout_height="@dimen/menu_ic"
            android:id="@+id/btn_HelpfulTips"
            android:background="@drawable/ic_helpful"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="30dp"
            android:text="Helpful Tips"
            android:layout_below="@+id/btn_HelpfulTips"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="10sp" />

        <Button
            android:layout_width="@dimen/menu_ic"
            android:layout_height="@dimen/menu_ic"
            android:id="@+id/btn_AYAKeyWorkers"
            android:background="@drawable/ic_workers"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_Websites"
            android:layout_marginStart="11dp" />

        <Button
            android:layout_width="@dimen/menu_ic"
            android:layout_height="@dimen/menu_ic"
            android:id="@+id/btn_Websites"
            android:background="@drawable/ic_websites"
            android:textAlignment="center"
            android:layout_marginStart="14dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView3" />


    </RelativeLayout>

    <TextView
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar"
        android:id="@+id/textView9"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
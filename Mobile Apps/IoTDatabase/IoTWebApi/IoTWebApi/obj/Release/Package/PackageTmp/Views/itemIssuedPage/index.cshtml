
<!DOCTYPE html>
<html>
<head>

    <style type="text/css">
        table {
            width: 80%;
        }

        table, tr, td, th {
            border: 2px black solid;
            padding: 2%;
        }

            tr:nth-child(odd) {
                background-color: lightgrey;
            }

            tr:nth-child(even) {
                background-color: white;
            }

        th {
            background-color: #595959;
            color: white;
        }

        input[type=submit] {
            margin-left: 75%;
        }
    </style>

</head>
<body>
    <h2>Items Issued</h2>
    <h4>All the items that have been issued to people in the database</h4>
    <br />
    <br />
    <form method="post" action="returnItem">
        <table>
            <tr>
                <th>ID</th>
                <th>Person</th>
                <th>Email</th>
                <th>Date Taken</th>
                <th>Type</th>
                <th>Subtype</th>
                <th>Notes</th>
                <th>Return</th>
            </tr>
            @foreach (ItemIssue item in Model)
            {
                <tr>
                    <td>@item.issueID</td>
                    <td>@item.Person.name </td>
                    <td>@item.Person.email</td>
                    <td>@item.dateTaken.Date</td>
                    <td>@item.Item.SubType.Type.typeName </td>
                    <td>@item.Item.SubType.subTypeName</td>
                    <td>@item.Item.itemNote</td>
                    <td><input type="checkbox" id="return" value="@item.issueID" name="id" /></td>
                </tr>
            }

        </table> <br /><br />
        <input type="submit" value="Return" id="return" />

    </form>
</body>
</html>

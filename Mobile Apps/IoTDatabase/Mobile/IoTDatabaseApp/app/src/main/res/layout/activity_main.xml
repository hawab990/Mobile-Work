<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/generic_layout_without_menu"
     />

    <include layout="@layout/toolbarsearchdatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="113dp"
        android:id="@+id/rel1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_ViewPeople"
            android:layout_width="@dimen/menu_ic"
            android:layout_height="@dimen/menu_ic"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/viewpeople"
            android:gravity="bottom|center"
            android:paddingBottom="-10dp" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="30dp"
            android:text="People"
            android:textAlignment="center"
            android:layout_below="@+id/btn_ViewPeople"
            android:layout_alignParentStart="true"
            android:textSize="10sp"
            android:gravity="center_vertical" />

        <Button
            android:layout_height="@dimen/menu_ic"
            android:layout_width="@dimen/menu_ic"
            android:id="@+id/btn_viewItemsDeployed"
            android:background="@drawable/viewitemsdeployed"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="wrap_content"
            android:text="Items Issued"
            android:textAlignment="center"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignStart="@+id/btn_itemsIssued"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:layout_below="@+id/btn_itemsIssued" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="30dp"
            android:text="Items"
            android:textAlignment="center"
            android:id="@+id/textView7"
            android:layout_below="@+id/btn_viewItems"
            android:layout_alignStart="@+id/btn_viewItems"
            android:textSize="10sp"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="@dimen/menu_ic"
            android:layout_height="@dimen/menu_ic"
            android:id="@+id/btn_itemsIssued"
            android:background="@drawable/searchitemreservation"
            android:layout_marginStart="11dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView7" />
        <Button
            android:layout_width="@dimen/menu_ic"
            android:layout_height="@dimen/menu_ic"
            android:id="@+id/btn_viewItems"
            android:background="@drawable/viewitems"
            android:layout_marginStart="17dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_ViewPeople" />

        <TextView
            android:layout_width="@dimen/menu_ic"
            android:layout_height="30dp"
            android:text="Items Delpoyed "
            android:textSize="10sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/btn_itemsIssued"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



</RelativeLayout>




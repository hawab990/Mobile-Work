<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questions_acitivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.hawwag2.languagetrainer.QuestionActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:text="Question Number"
        android:layout_marginTop="18dp"
        android:id="@+id/tvQuestionNumber"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.29" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noun"
        android:id="@+id/textViewNoun"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="354dp"
        android:layout_height="213dp"
        app:srcCompat="@drawable/der_apfel"
        android:id="@+id/imageViewQuizImage"
        android:layout_alignTop="@+id/textView" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_above="@+id/btnNext"
        android:layout_centerHorizontal="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Der"
            android:id="@+id/radioButtonDer"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:layout_marginTop="10dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Die"
            android:id="@+id/radioButtonDie"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:layout_marginTop="10dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Das"
            android:id="@+id/rdoButtonDas"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:layout_marginTop="10dp"

        />
    </RadioGroup>

    <Button
        android:text="Button"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheckAnswer" />

    <Button
        android:text="NEXT"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:id="@+id/btnNext"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView"
         />


</LinearLayout>
